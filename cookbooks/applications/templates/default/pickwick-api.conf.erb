check process <%= node.applications[:api][:name] %>-puma with pidfile <%= node.applications[:api][:puma][:directories][:pids] %>/<%= node.applications[:api][:name] %>.pid
  start program = "/bin/su - <%= node.applications[:user] %> -c 'cd <%= node.applications[:dir] %>/<%= node.applications[:api][:name] %> && RUBY_GC_MALLOC_LIMIT=<%= node.applications[:ruby_gc_malloc_limit] %> ELASTICSEARCH_API_URL=http://<%= node.applications[:api][:elasticsearch][:ip] %>:9200 SIDEKIQ_REDIS_URL=redis://<%= node.applications[:api][:sidekiq][:ip] %>:6379 bundle exec puma -e <%= node.applications[:api][:environment] %> --bind unix://<%= node.applications[:api][:puma][:directories][:sockets] %>/<%= node.applications[:api][:name] %>.sock --pidfile <%= node.applications[:api][:puma][:directories][:pids] %>/<%= node.applications[:api][:name] %>.pid --threads <%= node.applications[:api][:puma][:threads][:min] %>:<%= node.applications[:api][:puma][:threads][:max] %> --workers 1 --daemon'" with timeout <%= node.applications[:api][:puma][:wait] %> seconds
  stop program = "/bin/su - <%= node.applications[:user] %> -c 'kill -9 `cat <%= node.applications[:api][:puma][:directories][:pids] %>/<%= node.applications[:api][:name] %>.pid` && rm <%= node.applications[:api][:puma][:directories][:pids] %>/<%= node.applications[:api][:name] %>.pid'"

  if totalmem > 95% for 15 cycles then restart

  group <%= node.applications[:api][:name] %>_puma
